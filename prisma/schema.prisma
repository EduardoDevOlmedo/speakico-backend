
generator client {
  provider = "prisma-client-js"
    output   = "./generated/prisma-client"  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @map("_id") @default(auto()) @db.ObjectId
  name              String
  email             String   @unique
  password          String
  createdAt         DateTime @default(now())
  level             String
  interests         String
  prevFeedback      String
  targetLanguage    String   @default("es")
  avgSuccessRate    Float    @default(0)
  totalAttempts     Int      @default(0)
  audioSuccessRate  Float    @default(0)
  speechSuccessRate Float    @default(0)
  textSuccessRate   Float    @default(0)
}
